{
  "name": "xingine-nest",
  "version": "1.0.2",
  "description": "A xingine for nest",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc --project tsconfig.json && tsc-alias",
    "build:dev": "tsc --project tsconfig.json && tsc-alias",
    "build:watch": "tsc --project tsconfig.json --watch",
    "watch": "concurrently \"npm run build:watch\" \"nodemon --watch dist --exec 'npm run push'\"",
    "prepare": "npm run build",
    "push": "yalc push --changed && echo 'xingine-nest package pushed to linked projects'",
    "push:force": "yalc push --changed --force && node trigger-reload.js",
    "yalc:dev": "npm run clean && npm run build && npm run push",
    "yalc:dev-with-sourcemaps": "npm run clean && npm run build:dev && npm run push",
    "dev:demo": "start-dev.bat",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "typescript",
    "library",
    "decoder",
    "nest",
    "validation"
  ],
  "author": "Sushant Pandey <dtsushant@gmail.com>",
  "license": "GNU",
  "repository": {
    "type": "git",
    "url": "https://github.com/dtsushant/xingine-nest.git"
  },
  "bugs": {
    "url": "https://github.com/dtsushant/xingine-nest/issues"
  },
  "homepage": "https://github.com/dtsushant/xingine-nest#readme",
  "peerDependencies": {
    "@nestjs/core": "^11.0.1",
    "@nestjs/swagger": "^11.0.7",
    "class-validator": "^0.14.1",
    "decoders": "^2.7.0",
    "reflect-metadata": "^0.2.2",
    "xingine": "^1.0.9"
  },
  "devDependencies": {
    "@nestjs/core": "^11.0.1",
    "@nestjs/swagger": "^11.0.7",
    "@nestjs/testing": "^11.1.5",
    "@types/jest": "^29.5.14",
    "class-validator": "^0.14.1",
    "concurrently": "^8.2.0",
    "decoders": "^2.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.3.0",
    "tsc-alias": "^1.8.2",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.(e2e-)?spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/dist/**"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "xingine": "file:../xingine"
  }
}
